
// c++
#include <iostream>
using namespace std;
int main() {
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    int su=0;
	    cin>>n;
         int p,s;
         int a[11]={0};
	    for(int i=0;i<n;i++) {
	        cin>>p>>s;
	        a[p]=max(a[p],s);
	    }
	    
	    for(int i=0;i<9;i++) {
	        
	         su+=a[i];   
	        

	    }
	    cout<<su<<endl;
	}
	return 0;
}
